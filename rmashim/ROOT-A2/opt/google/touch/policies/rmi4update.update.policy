# These seccomp rules specify the syscalls used by the Synaptics touch FW
# updater tool rmi4update when flashing a new firmware onto a device.  The
# same tool is used to query the FW version, but that requires less
# syscalls which are specified in a different policy file.

write: 1
read: 1
select: 1
getdents: 1
close: 1
openat: 1
readlinkat: 1
ioctl: 1
open: 1
clock_gettime: 1
brk: 1
lseek: 1
readlink: 1
inotify_init: 1
nanosleep: 1
inotify_add_watch: 1
restart_syscall: 1
exit: 1
rt_sigreturn: 1
uname: 1
mmap: 1
munmap: 1
arch_prctl: 1
fstat: 1
fcntl: 1
execve: 1
exit_group: 1
set_tid_address: 1
set_robust_list: 1
rt_sigaction: 1
rt_sigprocmask: 1
getrlimit: 1
